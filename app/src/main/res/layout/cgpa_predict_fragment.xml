<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="285dp"
            android:scaleType="fitXY"
            android:background="#3A4065"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewId"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            app:cardCornerRadius="15dp"
            android:elevation="5dp"
            android:layout_marginRight="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="50dp"
                        android:layout_weight="1"
                        android:layout_height="100dp"
                        android:text="0.0"
                        android:gravity="center"
                        android:layout_margin="1dp">
                        <EditText
                            android:id="@+id/currentCGPAETId"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:gravity="center"
                            android:textSize="20sp"
                            android:hint="Current CGPA"
                            android:background="@drawable/white_rounded_button" />

                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="50dp"
                        android:layout_weight="1"
                        android:layout_height="100dp"
                        android:text="0.0"
                        android:gravity="center"
                        android:layout_margin="1dp">
                        <EditText
                            android:id="@+id/creditCompleteETId"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:gravity="center"
                            android:textSize="20sp"
                            android:hint="Credit Complete"
                            android:background="@drawable/white_rounded_button" />

                    </com.google.android.material.textfield.TextInputLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="50dp"
                        android:layout_weight="5"
                        android:layout_height="100dp"
                        android:text="0.0"
                        android:gravity="center"
                        android:layout_margin="1dp">
                        <EditText
                            android:id="@+id/targetCGPAETId"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:gravity="center"
                            android:textSize="20sp"
                            android:hint="Target CGPA"
                            android:background="@drawable/white_rounded_button" />

                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="50dp"
                        android:layout_weight="5"
                        android:layout_height="100dp"
                        android:text="0.0"
                        android:gravity="center"
                        android:layout_margin="1dp">
                        <EditText
                            android:id="@+id/creditLeftETId"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:gravity="center"
                            android:textSize="20sp"
                            android:hint="Credit Left"
                            android:background="@drawable/white_rounded_button" />

                    </com.google.android.material.textfield.TextInputLayout>


                </LinearLayout>

            </LinearLayout>



        </androidx.cardview.widget.CardView>





        <LinearLayout
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardViewId"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="1dp">
                <EditText
                    android:id="@+id/statusTVId"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center_horizontal"
                    android:paddingLeft="10dp"
                    android:hint="Status :"
                    android:textStyle="bold|italic"
                    android:background="@drawable/white_rounded_button" />

            </com.google.android.material.textfield.TextInputLayout>



            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/predictButtonId"
                android:layout_width="250dp"
                android:layout_height="55dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Predict"
                android:padding="12dp"
                android:background="@drawable/white_rounded_button"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="1dp">
                <TextView
                    android:id="@+id/noteTVId"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="Aisjac"
                    android:visibility="gone"
                    android:textStyle="bold|italic"
                    android:textColor="#ED8054"
                    android:background="@drawable/white_rounded_button" />

            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>

    </RelativeLayout>




</ScrollView>